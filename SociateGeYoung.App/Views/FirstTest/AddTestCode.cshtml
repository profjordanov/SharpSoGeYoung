@model SociateGeYoung.Models.ViewModels.AddTestCodeVm
@{
    ViewBag.Title = "AddTestCode";
}

<div class="container body-content">
    <h2>AddTestCode</h2>
    @using (Html.BeginForm("AddTestCode", "FirstTest", FormMethod.Post))
    {
        if (ViewBag.Message != null)
        {
            <span style="color:green">
                @ViewBag.Message
            </span>
        }
        <div class="form-group">
            @Html.LabelFor(m => m.TestCode, "Твоят код:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestCode, new { htmlAttributes = new { @class = "form-control" } })
                <span id="value"></span>
                <br />                
                <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Прати кода" class="btn btn-success" />
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    //alert("Последния код, който си получил е: " + localStorage.getItem('code'));
    document.getElementById('value').innerHTML = "(Последния код, който си получил е: " + localStorage.getItem('code')+")";
</script>
