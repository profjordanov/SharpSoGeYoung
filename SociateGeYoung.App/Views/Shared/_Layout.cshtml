@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Application for self testing and job offering">
    <meta name="keywords" content="Job,Test">
    <meta name="author" content="Yordan Yordanov">
    <title>@ViewBag.Title #SoGeYoung</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap.min.css")
    <link href="~/Content/full-slider.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("#SoGeYoung", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Тестове <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Тест 1", "Index", "FirstTest", new { userId = User.Identity.GetUserId() }, new { })</li>
                            <li><a href="#">Тест 2</a></li>

                        </ul>
                    </li>
                    <li>@Html.ActionLink("Обяви", "All", "Ads")</li>
                    <li>@Html.ActionLink("#SoGeRobo", "Index", "Robo")</li>
                    <li>@Html.ActionLink("Контакти", "Contact", "Home")</li>
                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("ЧР профил", "Index", "AdminHome", new { area = "Admin" }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @RenderBody()
    <div class="container body-content">
        <hr />
        <footer style=" visibility: hidden;">
            <p>С подкрепата на Societe Generale Експресбанк &copy; @DateTime.Now.Year </p>
        </footer>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
