@using Microsoft.AspNet.Identity
@model SociateGeYoung.Models.ViewModels.ApplyIndexVm

@{
    ViewBag.Title = "Apply";
}
<div class="container body-content">
    <h2>Apply</h2>

    @Html.ActionLink("Качи CV", "SubmitCV", "Carrer", new { userId = User.Identity.GetUserId() }, new { @class = "btn btn-lg btn-success" })
    
    @if (Model.ApplicationUser.CarrerCvs.Count == 0)
    {
        <h3>Нямаш качено CV, Моля натисни бутона отгоре.</h3>
    }
    else
    {
        using (Html.BeginForm("Index", "Apply", FormMethod.Post))
        {
            <div class="form-group">
                <input type="number" hidden="hidden" name="jobAdId" value="@Model.JobAd.Id" />
                <input hidden="hidden" name="userId" value="@Model.ApplicationUser.Id" />
                <br />
                <hr />
                <label for="sel1" class="col-lg-12">Избери CV:</label>
                <div class="col-lg-6">
                    <select class="form-control" id="cvId" name="cvId">
                        @foreach (var cv in Model.ApplicationUser.CarrerCvs)
                    {
                            <option value="@cv.Id">@cv.CVpath</option>
                        }
                    </select>
                    <br />
                </div>
                <br />
                <br />
            </div>

            <div class="form-group">
                <div class="col-lg-10">
                    <input type="submit" class="btn btn-lg btn-success" value="Избери" />
                </div>
            </div>
        }
    }
    

</div>

